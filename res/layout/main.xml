<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/mainLayout"
    android:background="#FFFFFFFF"
    >
<TableLayout    android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 				
>
<TableRow android:layout_width="fill_parent" android:layout_height="wrap_content"> 
<TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="Preference"
    android:textColor="#000000"
    android:textStyle="bold"
    android:textSize="16sp"
    />
<View android:layout_height="0dp" android:layout_width="6sp"/> 
<TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="Value"
    android:textSize="16sp"
    android:textColor="#000000"
    android:textStyle="bold"
    />
</TableRow>
<View android:layout_height="2dp" android:layout_width="fill_parent" android:background="#000000"/> 
<TableRow android:layout_width="fill_parent" android:layout_height="wrap_content"> 
<TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="Checkbox Value"
    android:textColor="#000000"
    android:textSize="16sp"
    />
<View android:layout_height="0dp" android:layout_width="6sp"/> 
<TextView  
	android:id="@+id/checkboxValue"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="blah"
    android:textSize="16sp"
    android:textColor="#000000"
    />
</TableRow>
<TableRow android:layout_width="fill_parent" android:layout_height="wrap_content"     android:id="@+id/layoutWithColor"
> 
<TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="Current Color"
    android:textColor="#000000"
    android:textSize="16sp"
    />
<View android:layout_height="0dp" android:layout_width="6sp"/> 
<Button 
		android:id="@+id/colorValue" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"  
		android:background="#FF00FF00"
    	android:textSize="16sp"
    	android:textColor="#000000"
    	android:text="    "
		 />		 
</TableRow>
<TableRow android:layout_width="fill_parent" android:layout_height="wrap_content"> 
<TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:textColor="#000000"
    android:text="Value set with Seekbar"
    android:textSize="16sp"
    />
<View android:layout_height="0dp" android:layout_width="6sp"/> 
<TextView  
		android:id="@+id/seekbarValue" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"  
    	android:textColor="#000000"
    	android:textSize="16sp"
    	android:text="42"
		 />		 
</TableRow>
<TableRow android:layout_width="fill_parent" android:layout_height="wrap_content"> 
<TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:textColor="#000000"
    android:textSize="16sp"
    android:text="Text-valued Preference"
    />
<View android:layout_height="0dp" android:layout_width="6sp"/> 
<TextView  
		android:id="@+id/textValue" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"  
    	android:text="blah"
    	android:textSize="16sp"
    	android:textColor="#000000"
		 />		 
</TableRow>
</TableLayout>
<Button 
		android:id="@+id/gotoSettings" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"  
    	android:text="Go to Settings"
    	android:textSize="16sp"
    	android:textColor="#000000"
		 />		 
		 
</LinearLayout>
